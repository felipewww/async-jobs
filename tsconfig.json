{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "composite": true,
    "pretty": true,
    "paths": {
      "@Core/*": ["Core/*"],
      "@Data/*": ["Data/*"],
      "@Domain/*": ["Domain/*"],
      "@Main/*": ["Main/*"],
      "@Presentation/*": ["Presentation/*"],
      "@Infra/*": ["Infra/*"],
      "@Utils/*": ["Utils/*"]
    }
  },
}
